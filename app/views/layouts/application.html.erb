<!DOCTYPE html>
<html>
  <head>
    <title>FoodProducts</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="nav justify-content-center">
      <%= link_to 'Home', products_path, :class => 'nav-link' %>
      <%= link_to 'Add Movie', new_product_path, :class => 'nav-link' %>
      <%= link_to 'About', products_path, :class => 'nav-link' %>
    </nav>

    <div class="container-fluid">
      <div class="jumbotron text-center">
        <h1><%= link_to "Lily's Shopping Heaven", products_path, :class => 'nav-link' %></h1>
      </div>
      <%= flash[:notice] %>
      <%= yield %>
    </div>
  </body>
</html>
